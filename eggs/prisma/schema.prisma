generator client {
    provider      = "prisma-client-js"
    binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model EggPrice {
    id    Int    @id @default(autoincrement())
    date  String @unique
    value Float

    @@map("egg_price")
}

model MedianCPI {
    id    Int    @id @default(autoincrement())
    date  String @unique
    value Float

    @@map("median_cpi")
}

model FederalNonfarmMinimumHourlyWage {
    id    Int    @id @default(autoincrement())
    date  String @unique
    value Float

    @@map("federal_nonfarm_minimum_hourly_wage")
}

model FredSeries {
	id 	          String  @id
	title         String
	frequency     String
	units         String
	lastUpdated   String  @map("last_updated")
	lastDataFetch String? @map("last_data_fetch")

	@@map("fred_series")
}